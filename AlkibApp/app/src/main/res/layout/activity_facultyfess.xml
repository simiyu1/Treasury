    android:orientation="vertical"
    tools:context="com.example.jeffnyangoya.alkibapp.facultyfess">

    <TextView android:text="NEWS" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <WebView

        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/fessNews">

    </WebView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:text="About"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bfessContacts"
        android:text="contacts"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bfessStructure"
        android:text="Structure"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bfessMentor"
